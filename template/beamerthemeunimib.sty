\usepackage{xcolor}  % To define colors using hex codes

% Tikz package
\usepackage{tikz}

%% ============ Margins, spacing, etc ============
\setbeamersize{text margin right=2mm, text margin left=7.50mm}  % text margin
% switch of the navigation symbols
\setbeamertemplate{navigation symbols}{}
% Modify the frame title margins
%\setbeamersize{frametitleleftmargin=5mm, frametitleverticalmargin=2mm}

\definecolor{headgray}{gray}{0.5} % 0 = black, 1 = white, 0.5 = 50% gray
% Define a custom color for the red background
\definecolor{customred}{HTML}{9C102E} % 9c102e
\setbeamercolor{mycolor}{fg=white,bg=customred}
\setbeamercolor{headline}{fg=headgray}
\setbeamercolor{title page}{fg=white,bg=customred}

\setbeamercolor{item}{fg=customred} % or any custom color
\setbeamercolor{subitem}{fg=customred}
\setbeamercolor{subsubitem}{fg=customred}
\setbeamercolor{section in toc}{fg=customred}
\setbeamercolor{subsection in toc}{fg=customred}
\setbeamercolor{section in head/foot}{fg=customred}
\setbeamercolor{section in sidebar}{fg=customred}
\setbeamercolor{section number projected}{fg=white,bg=customred} % Section numbers
\setbeamercolor{block title alerted}{fg=white, bg=customred} 

\usebackgroundtemplate{\includegraphics[width=\paperwidth,height=\paperheight]{template/resources/content-background.pdf}}

\setbeamertemplate{title page}{
      \begin{tikzpicture}[remember picture,overlay]
    \node[above right,inner sep=0pt] at (current page.south west)
    {
      \includegraphics[width=\paperwidth]{template/resources/title-background.pdf}
    };
  \end{tikzpicture}
    \begin{center}
    \vspace*{0.5cm}
    \hspace*{1.0cm}
        \begin{beamercolorbox}[wd=\dimexpr\paperwidth-30mm\relax, center, colsep*=1pt,
                           leftskip=5mm, rightskip=5mm, sep=1em]{title page}
            \centering
            {\usebeamerfont{title}\inserttitle\par}
            \vspace{1cm}
            {\usebeamerfont{author}\insertauthor\par}
            \vspace{1cm}
            {\usebeamerfont{date}\insertdate\par}
        \end{beamercolorbox}
    \end{center}
}

\setbeamertemplate{headline}{
  \vspace{2mm}
  \leavevmode
  \begin{beamercolorbox}[wd=\paperwidth,ht=2.5ex,dp=1ex]{headline}
    \hbox to \paperwidth{
      \hspace{7.5mm} % Left margin
      \usebeamercolor[fg]{headline}%
      \usebeamerfont{headline}%
      \insertshorttitle%
      \hfill
      \usebeamercolor[fg]{page number in headline}%
      \usebeamerfont{page number in headline}%
      \insertframenumber{}\,/\,\inserttotalframenumber%
      \hspace{2.0mm} % Right margin
    }
  \end{beamercolorbox}
}


\setbeamertemplate{frametitle}{
    \vspace{-2mm}
    \hspace{7.5mm}
     \begin{beamercolorbox}[
        wd=\dimexpr\paperwidth-9.5mm\relax,
        ht=2.5ex,
        dp=1.125ex]{mycolor}%
        \centering
            \usebeamerfont{frametitle}\insertframetitle
        \end{beamercolorbox}
}


